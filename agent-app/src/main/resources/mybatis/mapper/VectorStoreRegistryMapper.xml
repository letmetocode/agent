<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.getoffer.infrastructure.dao.VectorStoreRegistryDao">

    <resultMap id="BaseResultMap" type="com.getoffer.infrastructure.dao.po.VectorStoreRegistryPO">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="store_name" property="name" jdbcType="VARCHAR"/>
        <result column="store_type" property="storeType" jdbcType="VARCHAR" typeHandler="org.apache.ibatis.type.EnumTypeHandler"/>
        <result column="connection_config" property="connectionConfig" jdbcType="VARCHAR"/>
        <result column="collection_name" property="collectionName" jdbcType="VARCHAR"/>
        <result column="dimension" property="dimension" jdbcType="INTEGER"/>
        <result column="is_active" property="isActive" jdbcType="BOOLEAN"/>
        <result column="created_at" property="createdAt" jdbcType="TIMESTAMP"/>
        <result column="updated_at" property="updatedAt" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, store_name, store_type, connection_config, collection_name, dimension,
        is_active, created_at, updated_at
    </sql>

    <insert id="insert" parameterType="com.getoffer.infrastructure.dao.po.VectorStoreRegistryPO"
            useGeneratedKeys="true" keyProperty="id">
        INSERT INTO vector_store_registry (
            store_name, store_type, connection_config, collection_name, dimension,
            is_active, created_at, updated_at
        ) VALUES (
            #{name}, #{storeType}, #{connectionConfig}::jsonb, #{collectionName},
            COALESCE(#{dimension}, 1536), COALESCE(#{isActive}, true), CURRENT_TIMESTAMP, CURRENT_TIMESTAMP
        )
    </insert>

    <update id="update" parameterType="com.getoffer.infrastructure.dao.po.VectorStoreRegistryPO">
        UPDATE vector_store_registry SET
            store_name = #{name},
            store_type = #{storeType},
            connection_config = #{connectionConfig}::jsonb,
            collection_name = #{collectionName},
            dimension = #{dimension},
            is_active = #{isActive},
            updated_at = CURRENT_TIMESTAMP
        WHERE id = #{id}
    </update>

    <delete id="deleteById" parameterType="java.lang.Long">
        DELETE FROM vector_store_registry WHERE id = #{id}
    </delete>

    <select id="selectById" parameterType="java.lang.Long" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM vector_store_registry
        WHERE id = #{id}
    </select>

    <select id="selectByName" parameterType="java.lang.String" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM vector_store_registry
        WHERE store_name = #{name}
    </select>

    <select id="selectAll" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM vector_store_registry
        ORDER BY created_at DESC
    </select>

</mapper>
