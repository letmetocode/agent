<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.getoffer.infrastructure.dao.AgentToolCatalogDao">

    <resultMap id="BaseResultMap" type="com.getoffer.infrastructure.dao.po.AgentToolCatalogPO">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="tool_name" property="name" jdbcType="VARCHAR"/>
        <result column="tool_type" property="type" javaType="com.getoffer.types.enums.ToolTypeEnum" jdbcType="VARCHAR"/>
        <result column="description" property="description" jdbcType="VARCHAR"/>
        <result column="tool_config" property="toolConfig" jdbcType="VARCHAR"/>
        <result column="input_schema" property="inputSchema" jdbcType="VARCHAR"/>
        <result column="output_schema" property="outputSchema" jdbcType="VARCHAR"/>
        <result column="is_active" property="isActive" jdbcType="BOOLEAN"/>
        <result column="created_at" property="createdAt" jdbcType="TIMESTAMP"/>
        <result column="updated_at" property="updatedAt" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, tool_name, tool_type, description, tool_config, input_schema, output_schema,
        is_active, created_at, updated_at
    </sql>

    <resultMap id="BindingResultMap" type="com.getoffer.infrastructure.dao.po.AgentToolBindingPO">
        <id column="relation_id" property="relationId" jdbcType="BIGINT"/>
        <result column="agent_id" property="agentId" jdbcType="BIGINT"/>
        <result column="tool_id" property="toolId" jdbcType="BIGINT"/>
        <result column="relation_enabled" property="relationEnabled" jdbcType="BOOLEAN"/>
        <result column="priority" property="priority" jdbcType="INTEGER"/>
        <result column="relation_created_at" property="relationCreatedAt" jdbcType="TIMESTAMP"/>
        <result column="tool_name" property="toolName" jdbcType="VARCHAR"/>
        <result column="tool_type" property="toolType" javaType="com.getoffer.types.enums.ToolTypeEnum" jdbcType="VARCHAR"/>
        <result column="description" property="description" jdbcType="VARCHAR"/>
        <result column="tool_config" property="toolConfig" jdbcType="VARCHAR"/>
        <result column="input_schema" property="inputSchema" jdbcType="VARCHAR"/>
        <result column="output_schema" property="outputSchema" jdbcType="VARCHAR"/>
        <result column="tool_active" property="toolActive" jdbcType="BOOLEAN"/>
        <result column="tool_created_at" property="toolCreatedAt" jdbcType="TIMESTAMP"/>
        <result column="tool_updated_at" property="toolUpdatedAt" jdbcType="TIMESTAMP"/>
    </resultMap>

    <insert id="insert" parameterType="com.getoffer.infrastructure.dao.po.AgentToolCatalogPO"
            useGeneratedKeys="true" keyProperty="id">
        INSERT INTO agent_tool_catalog (
            tool_name, tool_type, description, tool_config, input_schema, output_schema,
            is_active, created_at, updated_at
        ) VALUES (
            #{name}, #{type}, #{description}, #{toolConfig}::jsonb, #{inputSchema}::jsonb,
            #{outputSchema}::jsonb, COALESCE(#{isActive}, true), CURRENT_TIMESTAMP, CURRENT_TIMESTAMP
        )
    </insert>

    <update id="update" parameterType="com.getoffer.infrastructure.dao.po.AgentToolCatalogPO">
        UPDATE agent_tool_catalog SET
            tool_name = #{name},
            tool_type = #{type},
            description = #{description},
            tool_config = #{toolConfig}::jsonb,
            input_schema = #{inputSchema}::jsonb,
            output_schema = #{outputSchema}::jsonb,
            is_active = #{isActive},
            updated_at = CURRENT_TIMESTAMP
        WHERE id = #{id}
    </update>

    <delete id="deleteById" parameterType="java.lang.Long">
        DELETE FROM agent_tool_catalog WHERE id = #{id}
    </delete>

    <select id="selectById" parameterType="java.lang.Long" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM agent_tool_catalog
        WHERE id = #{id}
    </select>

    <select id="selectByName" parameterType="java.lang.String" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM agent_tool_catalog
        WHERE tool_name = #{name}
    </select>

    <select id="selectAll" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM agent_tool_catalog
        ORDER BY created_at DESC
    </select>

    <select id="selectByType" parameterType="com.getoffer.types.enums.ToolTypeEnum" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM agent_tool_catalog
        WHERE tool_type = #{type}
        ORDER BY created_at DESC
    </select>

    <select id="selectEnabledBindingsByAgentId" parameterType="java.lang.Long" resultMap="BindingResultMap">
        SELECT
            rel.id AS relation_id,
            rel.agent_id,
            rel.tool_id,
            rel.is_enabled AS relation_enabled,
            rel.priority,
            rel.created_at AS relation_created_at,
            cat.tool_name,
            cat.tool_type,
            cat.description,
            cat.tool_config,
            cat.input_schema,
            cat.output_schema,
            cat.is_active AS tool_active,
            cat.created_at AS tool_created_at,
            cat.updated_at AS tool_updated_at
        FROM agent_tools rel
            JOIN agent_tool_catalog cat ON rel.tool_id = cat.id
        WHERE rel.agent_id = #{agentId}
          AND rel.is_enabled = TRUE
          AND cat.is_active = TRUE
        ORDER BY COALESCE(rel.priority, 2147483647) ASC, rel.created_at ASC, rel.id ASC
    </select>

    <select id="selectByIds" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM agent_tool_catalog
        WHERE id IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>

</mapper>
